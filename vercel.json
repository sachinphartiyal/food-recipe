{
    "buildCommand": "cd frontend/food-blog-app && npm run build",
    "outputDirectory": "frontend/food-blog-app/dist",
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/food-blog-app/dist/index.html"
        }
    ]
}